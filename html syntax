oad_date = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    
    data = ast.literal_eval(alert_data)
    
    tables_html = generate_html_tables(data)
    
    alert_status = "PASS" if report.lower() == "okay" else "FAIL"
    alert_color = "#4CAF50" if alert_status == "PASS" else "#FF0000"
    
